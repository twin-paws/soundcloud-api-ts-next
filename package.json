{
  "name": "soundcloud-api-ts-next",
  "version": "1.7.3",
  "description": "TypeScript SoundCloud API React hooks and Next.js API route handlers â€” App Router, Pages Router, OAuth PKCE, secrets stay server-side",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/twin-paws/soundcloud-api-ts-next"
  },
  "homepage": "https://twin-paws.github.io/soundcloud-api-ts-next/",
  "keywords": [
    "soundcloud",
    "soundcloud api",
    "soundcloud-api",
    "typescript",
    "nextjs",
    "next.js",
    "react",
    "react hooks",
    "app router",
    "pages router",
    "oauth",
    "soundcloud oauth",
    "soundcloud typescript",
    "soundcloud react",
    "soundcloud next",
    "music api",
    "api route handlers"
